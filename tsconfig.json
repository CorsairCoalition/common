{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2022",
		"strict": false,
		"removeComments": true,
		"sourceMap": true,
		"outDir": "out"
	},
	"include": [
		"src/**/*",
		"src/types.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"$schema": "https://json.schemastore.org/tsconfig"
}
